<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Auction Hub - Vehicles & Electronics</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>
  <header>
    <h1>AuctionBazaar</h1>
    <p>Bid on the best Bikes, Cars, Mobiles, and Laptops!</p>
  </header>

  <main class="categories">
    <!-- Bikes Section -->
    <section class="category">
      <h2>Bikes</h2>
      <div class="item-grid">
        <div class="item-card">
          <div class="image-container">
            <img src="image/harley.jpg" alt="Harley Davidson">
          </div>
          <div class="item-info">
            <h3>Harley Davidson</h3>
            <p>Starting Bid: <strong>₹5,50,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
        <div class="item-card">
          <div class="image-container">
            <img src="image/bike.jpg" alt="Royal Enfield">
          </div>
          <div class="item-info">
            <h3>Royal Enfield</h3>
            <p>Starting Bid: <strong>₹1,80,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
      </div>
    </section>

    <!-- Cars Section -->
    <section class="category">
      <h2>Cars</h2>
      <div class="item-grid">
        <div class="item-card">
          <div class="image-container">
            <img src="image/merc.jpg" alt="Mercedes-Benz">
          </div>
          <div class="item-info">
            <h3>Mercedes-Benz</h3>
            <p>Starting Bid: <strong>₹35,00,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
        <div class="item-card">
          <div class="image-container">
            <img src="image/car.jpg" alt="Polo">
          </div>
          <div class="item-info">
            <h3>Polo</h3>
            <p>Starting Bid: <strong>₹5,00,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
      </div>
    </section>

    <!-- Mobiles Section -->
    <section class="category">
      <h2>Mobiles</h2>
      <div class="item-grid">
        <div class="item-card">
          <div class="image-container">
            <img src="image/iphone.jpg" alt="iPhone 14">
          </div>
          <div class="item-info">
            <h3>iPhone 14</h3>
            <p>Starting Bid: <strong>₹80,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
        <div class="item-card">
          <div class="image-container">
            <img src="image/s22.jpg" alt="Samsung Galaxy S22">
          </div>
          <div class="item-info">
            <h3>Samsung Galaxy S22</h3>
            <p>Starting Bid: <strong>₹60,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
      </div>
    </section>

    <!-- Laptops Section -->
    <section class="category">
      <h2>Laptops</h2>
      <div class="item-grid">
        <div class="item-card">
          <div class="image-container">
            <img src="image/m1 pro.jpg" alt="MacBook Pro">
          </div>
          <div class="item-info">
            <h3>MacBook Pro</h3>
            <p>Starting Bid: <strong>₹1,50,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
        <div class="item-card">
          <div class="image-container">
            <img src="image/dell.jpg" alt="Dell XPS 13">
          </div>
          <div class="item-info">
            <h3>Dell XPS 13</h3>
            <p>Starting Bid: <strong>₹1,00,000</strong></p>
            <button class="bid-btn">Place Bid</button>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
